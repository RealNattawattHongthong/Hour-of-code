import string
   
words = input("Enter the words: ")
#-----------------------------MAGIC WILL WORK ON THIS---------------------------------
print ("The original string is : " +  words)
res = sum([i.strip(string.punctuation).isalpha() for i in words.split()])
#-----------------------------MAGIC WILL STOP--------------------------------------
#answer
print ("The number of words in string are : " +  str(res))
